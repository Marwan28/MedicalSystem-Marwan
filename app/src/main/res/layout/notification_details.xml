<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        android:elevation="@dimen/_2sdp">
        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/ic_notification_profile_pic"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="@dimen/_37sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="6"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_notification_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Ebrahem Khaled"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/second_black"
                        android:textSize="@dimen/_14ssp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_notification_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/_8ssp"
                        android:text="02:39AM"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#B5B5B5"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_notification_status"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_new_notification"/>
                </LinearLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_notification_description"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have Medical record from analysis employee"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/notification_description"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
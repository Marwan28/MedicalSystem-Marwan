<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        android:elevation="@dimen/_2sdp">
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="@dimen/_3sdp"
                android:weightSum="8"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_call_owner"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/tv_doctor_call_name"
                    android:layout_height="match_parent"
                    android:text="Ebrahem Khaled"
                    android:textSize="@dimen/_15ssp"
                    android:layout_weight="6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:weightSum="8"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_call_date"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/tv_doctor_call_date"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_15ssp"
                    android:layout_height="match_parent"
                    android:text="24 . 04 . 2021"
                    android:layout_weight="7"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_doctor_call_accept"
                    app:iconGravity="textStart"
                    app:icon="@drawable/ic_doctor_call_accept"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:backgroundTint="#1AD672"
                    app:cornerRadius="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_doctor_call_busy"
                    app:iconGravity="textStart"
                    app:icon="@drawable/ic_doctor_call_busy"
                    android:text="Busy"
                    android:textAllCaps="false"
                    android:backgroundTint="#EC9511"
                    app:cornerRadius="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
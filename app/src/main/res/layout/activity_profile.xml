<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/profile_background">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:tint="@color/white"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/profile_info_bordder"
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_marginBottom="@dimen/_50sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp">
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Ebrahem Elzainy"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_15ssp"
            android:textAlignment="center"
            android:textColor="@color/profile_name"/>
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_specialist"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialist - Doctor"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/profile_texts"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gender"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/profile_texts"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bod"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29-03-1997"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/profile_texts"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_address"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mansoura , Shirben"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/profile_texts"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_marital_status"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/profile_texts"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ebrahemelzainy@gmail.com"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/profile_texts"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_number"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="096521145523"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/profile_texts"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ll_info"
        app:layout_constraintBottom_toTopOf="@id/ll_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_profile_pic_background"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_profile_pic_border"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_profile_pic"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstSplashActivity">
    <androidx.appcompat.widget.AppCompatImageView
        style="@style/background_top"
        tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatImageView
        style="@style/background_bottom"
        tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_logo_name_first_splash"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/_140sdp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_loading_bar"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_name_first_splash"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_60sdp"
        app:layout_constraintBottom_toTopOf="@+id/tv_loading_first_splash"/>
    <TextView
        android:id="@+id/tv_loading_first_splash"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_name_first_splash"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/main"
        android:textSize="@dimen/_15ssp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
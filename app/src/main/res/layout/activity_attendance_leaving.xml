<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceLeavingActivity">
    <LinearLayout
        android:id="@+id/specialist_data"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:onClick="profile"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_small_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:onClick="profile"
                android:text="Ebrahem Elzainy"
                android:gravity="bottom"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textview.MaterialTextView
                android:text="Specialist , Receptionist"
                android:onClick="profile"
                android:layout_weight="1"
                android:textSize="@dimen/_12ssp"
                android:gravity="top"
                android:textColor="@color/main"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:onClick="notification"
                android:src="@drawable/ic_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/specialist_data"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:backgroundTint="#E68A84"
        android:id="@+id/mcv_note">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="#F36D13"
                android:textSize="@dimen/_14ssp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details note : Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mcv_note"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:text="Attendance"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_weight="1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_attendance"/>
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09 : 00 am"
                android:textColor="@color/main"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10ssp"/>
            <com.google.android.material.button.MaterialButton
                app:iconGravity="textStart"
                android:onClick="attendance"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_40sdp"
                app:icon="@drawable/ic_attendance_leaving_arrow"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mcv_attendance"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:text="Leaving"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_weight="1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_leaving"/>
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04 : 00 pm"
                android:textColor="@color/main"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10ssp"/>
            <com.google.android.material.button.MaterialButton
                app:iconGravity="textStart"
                android:onClick="leaving"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_40sdp"
                app:icon="@drawable/ic_attendance_leaving_arrow"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>